<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#22748E"
    tools:context=".countryproject.CountryList">

    <Button
        android:id="@+id/bdBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BD"
        android:textSize="15sp"
        android:textColor="#E8C5C5"
        android:backgroundTint="@color/white"
        style="@style/Widget.AppCompat.Button.Colored"
        android:drawableLeft="@drawable/bd_flag"/>
    <Button
        android:id="@+id/ukBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UK"
        android:textSize="15sp"
        android:textColor="#E8C5C5"
        android:backgroundTint="@color/white"
        style="@style/Widget.AppCompat.Button.Colored"
        android:drawableLeft="@drawable/uk_flag"/>
    <Button
        android:id="@+id/usaBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USA"
        android:textSize="15sp"
        android:textColor="#E8C5C5"
        android:backgroundTint="@color/white"
        style="@style/Widget.AppCompat.Button.Colored"
        android:drawableLeft="@drawable/usa_flag"/>

</LinearLayout>